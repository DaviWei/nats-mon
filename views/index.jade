extends layout

block content
    .container-fluid.varz
        h2 Variables
        .row.info
            .col-md-6
                strong Started:
                span= " " + moment(varz.start).format('MMMM Do YYYY, h:mm:ss a')
            .col-md-6
                strong Uptime:
                span= " " + varz.uptime
        .row.info
            .col-md-6
                strong In Bytes:
                span= " " + numeral(varz.in_bytes).format('0.00 b')
            .col-md-6
                strong Out Bytes:
                span= " " + numeral(varz.out_bytes).format('0.00 b')
        .row.info
            .col-md-6
                strong In Messages:
                span= " " + numeral(varz.in_msgs).format('0,0')
            .col-md-6
                strong Out Messages:
                span= " " + numeral(varz.out_msgs).format('0,0')
    hr
    .container-fluid.connz
        h2 Connections
            small= " " + connz.num_connections
        .row
            .col-md-12
                p Reports more detailed information on current connections.
        .row
            .col-md-12
                table.table
                    thead
                        tr
                            th cid
                            th ip
                            th port
                            th in msgs
                            th out msgs
                            th in bytes
                            th out bytes
                    tbody
                        each con in connz.connections
                            tr
                                td= con.cid
                                td= con.ip
                                td= con.port
                                td= numeral(con.in_msgs).format('0,0')
                                td= numeral(con.out_msgs).format('0,0')
                                td= numeral(con.in_bytes).format('0.00 b')
                                td= numeral(con.out_bytes).format('0.00 b')

    hr
